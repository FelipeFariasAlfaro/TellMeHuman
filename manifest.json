{
  "manifest_version": 3,
  "name": "Tell Me Human",
  "version": "0.1.5",
  "permissions": [
    "contextMenus",
    "storage",
    "sidePanel",
    "tabs",
    "activeTab",
    "scripting",
    "windows"
  ],
  "icons": {
    "16": "img/16x16.png",
    "48": "img/48x48.png",
    "128": "img/128x128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Detector IA"
  },
  "commands": {
    "toggle-sidepanel": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Alternar sidepanel"
    }
  },
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content_script.js"],
    "run_at": "document_idle"
  }
]
}
