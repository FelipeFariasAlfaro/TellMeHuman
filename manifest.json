{
  "manifest_version": 3,
  "name": "Detector IA - Sidepanel",
  "version": "0.1",
  "permissions": [
    "contextMenus",
    "storage",
    "sidePanel",
    "activeTab",
    "scripting"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Detector IA"
  },
  "commands": {
    "toggle-sidepanel": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Alternar sidepanel"
    }
  },
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content_script.js"],
    "run_at": "document_idle"
  }
]
}
